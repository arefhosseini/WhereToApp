<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:layoutDirection="rtl"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="center_vertical"
        tools:ignore="RtlHardcoded">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ir.fearefull.wheretoapp.view.base.MyTextView
                android:id="@+id/overallScoreTextView"
                android:layout_width="28dp"
                android:layout_height="18dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:background="@drawable/background_round_overall_score_text_view"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                style="@style/MyTheme.TextAppearance.XSmall"
                android:textColor="@color/textLightPrimary"
                tools:ignore="RtlHardcoded" />

            <ir.fearefull.wheretoapp.view.base.MyTextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                style="@style/MyTheme.TextAppearance.Medium"
                android:textColor="@color/textDarkPrimary"
                tools:ignore="RelativeOverlap" />

            <ir.fearefull.wheretoapp.view.base.MyTextView
                android:id="@+id/placeTypesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                style="@style/MyTheme.TextAppearance.Small"
                android:textColor="@color/textDarkSecondary"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>